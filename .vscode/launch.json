{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Compound",
            "configurations": ["ServiceRegistry", "Echo"]
        }
    ],
    "configurations": [
        {
            "name": "ServiceRegistry",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-serviceregistry",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/ServiceRegistry/ServiceRegistry.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/Swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7089"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Echo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-echo",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/Echo/Echo.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/Echo"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:8001",
                "SERVICE_REGISTRY_ENDPOINT": "https://localhost:7089/Service"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}